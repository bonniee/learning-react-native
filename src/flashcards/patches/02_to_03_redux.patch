+const reducer = (state = [], action) => {
+  console.warn("Changes are not persisted to disk");
+
+  switch (action.type) {
+    case ADD_DECK:
+      return state.concat(action.data);
+    case ADD_CARD:
+      return decksWithNewCard(state, action.data);
+  }
+  return state;
+};
+
+export default reducer;
